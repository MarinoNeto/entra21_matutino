public class Formulario extends JFrame {

	private JPanel contentPane;
	private JTextField textUsuAdm;
	private JTextField textSenAdm;

	public Formulario() {
		setTitle("Login");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
